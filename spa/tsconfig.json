{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"]
}
